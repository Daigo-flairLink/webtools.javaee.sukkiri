<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="ejb-jar_ID" version="3.0" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd">
      <description>Contains the PlantsByWebSphere EJB</description>
      <display-name>PlantsByWebSphere EJB Module</display-name>
      <enterprise-beans>
         <session id="Session_1">
            <description>Bean that creates a new user</description>
            <display-name>Login Session EJB</display-name>
            <ejb-name>Login</ejb-name>
            <home>com.ibm.websphere.samples.plantsbywebsphereejb.LoginHome</home>
            <remote>com.ibm.websphere.samples.plantsbywebsphereejb.Login</remote>
            <ejb-class>com.ibm.websphere.samples.plantsbywebsphereejb.LoginBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref id="EjbRef_2">
               <ejb-ref-name>ejb/Customer</ejb-ref-name>
               <ejb-ref-type>Entity</ejb-ref-type>
               <local-home>com.ibm.websphere.samples.plantsbywebsphereejb.CustomerHome</local-home>
               <local>com.ibm.websphere.samples.plantsbywebsphereejb.Customer</local>
            </ejb-local-ref>
            <resource-ref id="ResourceRef_1">
               <res-ref-name>plantsby/PlantsByWebSphereDataSource</res-ref-name>
               <res-type>javax.sql.DataSource</res-type>
               <res-auth>Application</res-auth>
            </resource-ref>
         </session>
      </enterprise-beans>
   </ejb-jar>
